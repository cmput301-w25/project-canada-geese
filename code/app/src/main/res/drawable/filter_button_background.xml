<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state (ripple effect) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light Grey when pressed -->
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Default state (White background) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="20dp"/>
            <stroke android:width="1dp" android:color="#BDBDBD"/> <!-- Light Grey Border -->
        </shape>
    </item>
</selector>