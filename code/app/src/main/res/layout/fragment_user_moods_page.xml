<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F1ED"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F1ED"
        >

        <!-- Top Banner -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#91B4A4"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_gravity="top"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Green Circle -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/new_circle_24"
                android:layout_marginEnd="10dp"/>

            <!-- Search Bar -->
            <SearchView
                android:id="@+id/searchView"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background"
                android:queryHint="Search..."
                android:iconifiedByDefault="false"
                android:padding="5dp"/>


            <!-- Filter Button -->
            <ImageButton
                android:id="@+id/filter_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_filter_alt_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

        <!-- Greeting Texts -->
        <TextView
            android:id="@+id/user_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, User! :)"
            android:textSize="38sp"
            android:textStyle="bold"
            android:textColor="#6B4F3F"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How are you doing today?"
            android:textSize="18sp"
            android:textColor="#6B4F3F"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:scrollbars="vertical"/>


        <LinearLayout
            android:id="@+id/bottom_banner"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#91B4A4"
            android:padding="8dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- Home icon  -->
            <ImageButton
                android:id="@+id/home_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_cottage_24" />

            <!-- Spacer to push the other icons apart -->
            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.25" />

            <!-- Bird icon -->
            <ImageButton
                android:id="@+id/bird_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/raven_24dp_2d2d2d_fill0_wght400_grad0_opsz24__1_" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.25" />

            <!-- Add Button -->

            <ImageButton
                android:id="@+id/add_mood_event_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_add_circle_outline_24" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.25" />

            <!-- Image icon -->
            <ImageButton
                android:id="@+id/image_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_image_24" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1.25" />

            <!-- Profile Icon -->
            <ImageButton
                android:id="@+id/profile_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/baseline_account_circle_24" />


        </LinearLayout>


    </LinearLayout>
</FrameLayout>


