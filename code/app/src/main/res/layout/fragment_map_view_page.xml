<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:tools="http://schemas.android.com/tools">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:alpha="0.9"
        android:background="@android:color/white"
        android:elevation="5dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Row for SearchView and Filter Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- SearchView for searching locations -->
            <SearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/bg_search_view"
                android:iconifiedByDefault="false"
                android:queryHint="Search location" />
            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/filter_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/bg_search_view"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="8dp"
                android:paddingEnd="12dp"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/filter_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:src="@drawable/thebetterfilter" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FILTER"
                    android:textStyle="bold"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row for Memory and Friends Chips -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <!-- Memory Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btnMemory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:checkable="true"
                android:text="Memory" />

            <!-- Friends Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/btnFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:text="Friends" />
        </LinearLayout>

        <!-- Filter Mood Chips -->
        <HorizontalScrollView
            android:id="@+id/filter_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filter_chip_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:singleSelection="false"
                >


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_last_7_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_7_days"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_clear_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clear_all"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_anger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Angry"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_confusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confused"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_disgust"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Disgusted"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_fear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scared"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_happiness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_sadness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sad"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_shame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ashamed"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_mood_surprise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surprised"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp"
                    />


                <!-- More Mood Chips... -->
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>